<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/result"
        android:layout_width="70sp"
        android:layout_height="48sp"
        android:layout_x="123dp"
        android:layout_y="74dp"
         />

    <EditText
        android:id="@+id/valor1"
        android:layout_width="70sp"
        android:layout_height="48sp"
        android:layout_x="36dp"
        android:layout_y="34dp"
        android:ems="10"
        android:hint="numero"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="70sp"
        android:layout_height="48sp"
        android:layout_x="36dp"
        android:layout_y="88dp"
        android:ems="10"
        android:hint="numero"
        android:inputType="number" />

    <EditText
        android:id="@+id/valor3"
        android:layout_width="70sp"
        android:layout_height="48sp"
        android:layout_x="36dp"
        android:layout_y="145dp"
        android:ems="10"
        android:hint="numero"
        android:inputType="number" />

    <Button
        android:id="@+id/calculo"
        android:layout_width="70sp"
        android:layout_height="48sp"
        android:layout_x="122dp"
        android:layout_y="132dp"
        android:text="Calcular PE"
        android:textSize="8sp" />


</AbsoluteLayout>
</androidx.wear.widget.BoxInsetLayout>